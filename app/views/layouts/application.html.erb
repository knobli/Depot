<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body id="store">
	<div id="banner">
		<%=image_tag("logo.png", :height => '100px')%>
		<%=@page_title || "Pragmatic Bookshelf"%>
	</div>
	<div id="columns">
		<div id="side">
			<%=link_to 'Home', "/" %><br>
			<%=link_to "Products", products_path() 	%><br>
			<%=link_to "Cart", cart_path(current_cart) 	%>
		</div>	
	
		<div id="main">
			<%= yield %>
		</div>
	</div>		

</body>
</html>
